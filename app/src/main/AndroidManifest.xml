<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yaaaxidagar.headlinestoday">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/images"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SportsFeeds"
            android:label="SportsFeeds"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BusinessFeeds"
            android:label="BusinessFeeds"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GamingFeeds"
            android:label="GamingFeeds"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".GeneralFeeds"
            android:label="GeneralFeeds"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>